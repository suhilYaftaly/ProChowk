{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    //import aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@reusable/*": ["src/components/reusable/*"],
      "@appComps/*": ["src/components/reusable/appComps/*"],
      "@gqlOps/*": ["src/graphql/operations/*"],
      "@redux/*": ["src/redux/*"],
      "@rSlices/*": ["src/redux/slices/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/utils/hooks/*"],
      "@constants/*": ["src/constants/*"],
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"],
      "@contractor/*": ["src/components/contractor/*"],
      "@user/*": ["src/components/user/*"],
      "@advs/*": ["src/components/advs/*"],
      "@jobs/*": ["src/components/jobs/*"],
      "@types/*": ["src/types/*"],
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
